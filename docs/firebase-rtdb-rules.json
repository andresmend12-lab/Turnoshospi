{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "plants": {
      "$plantId": {
        ".read": "auth != null && (data.child('ownerId').val() === auth.uid || data.child('allowedUsers').hasChildren([auth.uid]) || data.child('supervisors').hasChildren([auth.uid]))",
        ".write": "auth != null && (data.child('ownerId').val() === auth.uid || (!data.exists() && newData.child('ownerId').val() === auth.uid))",
        "ownerId": {
          ".validate": "newData.isString() && newData.val() === auth.uid"
        },
        "allowedUsers": {
          "$uid": {
            ".validate": "auth != null && (root.child('plants').child($plantId).child('ownerId').val() === auth.uid || $uid === auth.uid)"
          }
        },
        "supervisors": {
          "$uid": {
            ".validate": "auth != null && root.child('plants').child($plantId).child('ownerId').val() === auth.uid"
          }
        }
      }
    },
    ".read": false,
    ".write": false
  }
}
